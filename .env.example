# Application
APP_NAME=YOUR_APP_NAME
APP_VERSION=YOUR_APP_VERSION
DEBUG=YOUR_DEBUG_SETTING

# Database
DATABASE_URL=postgresql://YOUR_DB_USER:YOUR_DB_PASSWORD@YOUR_DB_HOST:YOUR_DB_PORT/YOUR_DB_NAME?sslmode=require

# Atlas SSO
# Configure these based on your Atlas SSO environment (dev/staging/production)
ATLAS_SSO_URL=YOUR_ATLAS_SSO_URL
ATLAS_APP_CODE=YOUR_APP_CODE
ATLAS_ENCRYPTION_KEY=YOUR_32_CHARACTER_KEY
ATLAS_ENCRYPTION_IV=YOUR_16_CHARACTER_IV

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=YOUR_CLOUD_NAME
CLOUDINARY_API_KEY=YOUR_API_KEY
CLOUDINARY_API_SECRET=YOUR_API_SECRET
CLOUDINARY_FOLDER=YOUR_FOLDER_NAME

# Email Configuration
MAIL_USERNAME=YOUR_EMAIL_USERNAME
MAIL_PASSWORD=YOUR_EMAIL_PASSWORD
MAIL_FROM=YOUR_EMAIL_ADDRESS
MAIL_FROM_NAME=YOUR_EMAIL_DISPLAY_NAME
MAIL_PORT=YOUR_MAIL_PORT
MAIL_SERVER=YOUR_MAIL_SERVER
MAIL_USE_TLS=YOUR_TLS_SETTING
MAIL_USE_SSL=YOUR_SSL_SETTING

APP_URL=YOUR_APP_URL

# Cron API Key for securing scheduled endpoints (Generate with: openssl rand -hex 32)
CRON_API_KEY=YOUR_CRON_API_KEY_HERE

# Response Encryption (for GET endpoints)
# IMPORTANT: Generate secure keys using:
#   Key (32 chars): openssl rand -hex 16
#   IV (16 chars):  openssl rand -hex 8
ENCRYPTION_ENABLED=YOUR_ENCRYPTION_SETTING
ENCRYPTION_KEY=YOUR_32_CHARACTER_KEY
ENCRYPTION_IV=YOUR_16_CHARACTER_IV

# Logging
LOGGING_ENABLED=YOUR_LOGGING_SETTING
LOG_LEVEL=YOUR_LOG_LEVEL
LOG_TO_FILE=YOUR_LOG_TO_FILE_SETTING

# CORS_ORIGINS=["*"]

# Rate Limiting
RATE_LIMIT_ENABLED=YOUR_RATE_LIMIT_SETTING
RATE_LIMIT_REQUESTS=YOUR_REQUEST_LIMIT
RATE_LIMIT_WINDOW=YOUR_TIME_WINDOW_IN_SECONDS
